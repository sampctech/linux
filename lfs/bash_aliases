#
# .bash_aliases
#

# Personal aliases for bash

# For system

alias ssd='sudo shutdown now'
alias sr='sudo reboot'

# Shortcuts
alias install='sudo apt-get install'
alias update='sudo apt update'
alias upgrade='sudo apt upgrade'

# reload bash alias sheet
# . ~/.bashrc
# source ~/.bashrc
alias mbas='sudo nano ~/.bash_aliases'
alias rlb='exec "$BASH"'
alias rls='exec $SHELL'

# alias gft='echo get fuct'
